<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanqiao.dao.UserDao">

    <update id="update"  parameterType="com.lanqiao.entity.User">
        update tb_users set username=#{username},password=#{password},email=#{email},address=#{adress} where id =#{id}
    </update>


    <select id="queryUserWithDepartsByPage" parameterType="hashmap" resultType="com.lanqiao.vo.UserVo">
        select a.id,a.username,a.password,a.email,a.address,b.part_id partId,b.part_name partName from tb_users a left join department b
        on a.part_id = b.part_id
        limit #{pageNum},#{pageSize}
    </select>
</mapper>
